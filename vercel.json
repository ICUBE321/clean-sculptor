{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    {
      "src": "client/vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ]
}
